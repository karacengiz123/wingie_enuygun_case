{% extends 'base.html.twig' %}

{% block body %}
    <div class="container h-100">
        <div class="row">
            <div class="col">
                <h3 class="text-center pt-2 pb-2">Developer Task List</h3>
            </div>
        </div>
        <div class="row justify-content-center align-items-center">
            <div >
                {% for key,developer in datas %}
                    <div>
                        <h2>
                                {{ developer.name }} - Level : {{ developer.level }} Estimated :{{ developer.estimated }} Task Count :{{ developer.tasks.count }}
                        </h2>
                        <div >
                            <div class="body">
                                <table class="table table-sm table-bordered table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Estimated</th>
                                        <th>Level</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for task in developer.tasks %}
                                        <tr>
                                            <td>{{ task.id }}</td>
                                            <td>{{ task.title }}</td>
                                            <td>{{ task.estimated }}</td>
                                            <td>{{ task.level }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
